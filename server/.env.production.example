NODE_ENV=production
PORT=3000

DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECT_TIMEOUT_MS=10000

JWT_SECRET=replace-with-very-long-random-secret
ADMIN_JWT_SECRET=replace-with-separate-very-long-random-secret
SESSION_COOKIE_NAME=gcc_session
ADMIN_SESSION_COOKIE_NAME=gcc_admin_session
COOKIE_DOMAIN=.yourdomain.com
COOKIE_SAME_SITE=lax
COOKIE_SECURE=true
AGENCY_SESSION_DAYS=7
ADMIN_SESSION_HOURS=12

CORS_ORIGINS=https://app.yourdomain.com
TRUST_PROXY=true
AUTO_APPROVE_PAYMENTS=false

RATE_LIMIT_STORE=postgres

PASSWORD_RESET_TOKEN_TTL_MINUTES=30
PASSWORD_RESET_URL_BASE=https://app.yourdomain.com
PASSWORD_RESET_DELIVERY=resend
RESEND_API_KEY=replace-with-resend-api-key
RESEND_FROM_EMAIL=no-reply@yourdomain.com

ADMIN_BOOTSTRAP_EMAIL=admin@yourdomain.com
ADMIN_BOOTSTRAP_PASSWORD=replace-with-strong-password
