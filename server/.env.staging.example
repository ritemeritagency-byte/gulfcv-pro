NODE_ENV=staging
PORT=3000

DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECT_TIMEOUT_MS=10000

JWT_SECRET=replace-with-long-random-secret
ADMIN_JWT_SECRET=replace-with-separate-long-random-secret
SESSION_COOKIE_NAME=gcc_session
ADMIN_SESSION_COOKIE_NAME=gcc_admin_session
COOKIE_DOMAIN=
COOKIE_SAME_SITE=lax
COOKIE_SECURE=true
AGENCY_SESSION_DAYS=7
ADMIN_SESSION_HOURS=12

CORS_ORIGINS=https://staging.your-frontend-domain.com
TRUST_PROXY=true
AUTO_APPROVE_PAYMENTS=false

RATE_LIMIT_STORE=postgres

PASSWORD_RESET_TOKEN_TTL_MINUTES=30
PASSWORD_RESET_URL_BASE=https://staging.your-frontend-domain.com
PASSWORD_RESET_DELIVERY=log
RESEND_API_KEY=
RESEND_FROM_EMAIL=no-reply@yourdomain.com

ADMIN_BOOTSTRAP_EMAIL=admin-staging@yourdomain.com
ADMIN_BOOTSTRAP_PASSWORD=replace-with-strong-password
ADMIN_ALLOWED_EMAILS=admin-staging@yourdomain.com
